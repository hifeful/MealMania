<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewRandomMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/random_meal"
        android:textColor="@color/green_500"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/imageViewRandomMeal"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewRandomMeal"
        app:layout_constraintBottom_toTopOf="@id/textViewRecentMeals"
        tools:src="@tools:sample/avatars"/>

    <View
        android:id="@+id/viewGradient"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_gradient"
        app:layout_constraintStart_toStartOf="@id/imageViewRandomMeal"
        app:layout_constraintEnd_toEndOf="@id/imageViewRandomMeal"
        app:layout_constraintTop_toTopOf="@id/imageViewRandomMeal"
        app:layout_constraintBottom_toBottomOf="@id/imageViewRandomMeal"/>

    <TextView
        android:id="@+id/textViewRandomMealName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/imageViewRandomMeal"
        app:layout_constraintEnd_toEndOf="@id/imageViewRandomMeal"
        app:layout_constraintBottom_toBottomOf="@id/imageViewRandomMeal"
        tools:text="Meal nameMeal nameMeal nameMeal nameMeal nameMeal nameMeal nameMeal nameMeal nameMeal name"/>

    <TextView
        android:id="@+id/textViewRecentMeals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:text="@string/recent_meals"
        android:textAllCaps="true"
        android:textColor="@color/green_500"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewRandomMeal" />

</androidx.constraintlayout.widget.ConstraintLayout>