<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewRandomMeal"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars" />

    <View
        android:id="@+id/viewGradient"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_gradient"
        app:layout_constraintBottom_toBottomOf="@id/imageViewRandomMeal"
        app:layout_constraintEnd_toEndOf="@id/imageViewRandomMeal"
        app:layout_constraintStart_toStartOf="@id/imageViewRandomMeal"
        app:layout_constraintTop_toTopOf="@id/imageViewRandomMeal" />

    <TextView
        android:id="@+id/textViewRandomMealName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/imageViewRandomMeal"
        app:layout_constraintEnd_toEndOf="@id/imageViewRandomMeal"
        app:layout_constraintStart_toStartOf="@id/imageViewRandomMeal"
        tools:text="Meal nameMeal nameMeal nameMeal nameMeal nameMeal nameMeal nameMeal nameMeal nameMeal name" />

</androidx.constraintlayout.widget.ConstraintLayout>